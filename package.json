{
  "name": "cypress-frontend-selfcare-test",
  "version": "0.1.0",
  "private": true,
  "description": "Esqueleto de automacao de testes frontend com Cypress, TypeScript e boas praticas de POM, APIs e relatorios.",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:open": "cypress open --config-file cypress.config.ts",
    "test:run": "cypress run --config-file cypress.config.ts",
    "test:ci": "cypress run --config-file cypress.config.ts --reporter-options reportDir=reports/mochawesome",
    "report:merge": "mochawesome-merge reports/mochawesome/*.json -o reports/mochawesome/mochawesome.json",
    "report:generate": "marge reports/mochawesome/mochawesome.json --reportDir reports/mochawesome --inline",
    "posttest:ci": "npm run report:merge && npm run report:generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cypress": "^13.14.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.3.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-import-resolver-typescript": "3.6.1",
    "husky": "^9.1.6",
    "@faker-js/faker": "^9.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
